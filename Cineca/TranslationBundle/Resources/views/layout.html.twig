<!DOCTYPE html>
<html>
    <head>
      <meta charset="UTF-8" />
      <link rel="stylesheet" href="{{ asset('bundles/cinecatranslation/css/jquery-autocomplete.min.css') }}" />
      <script type="text/javascript" src="{{ asset('bundles/cinecatranslation/js/jquery.min.js') }}"></script>
      <script type="text/javascript" src="{{ asset('bundles/cinecatranslation/js/jquery-autocomplete.min.js') }}"></script>
      {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('bundles/cinecatranslation/css/bootstrap.css') }}" />
      {% endblock %}
      {% block javascript %}
        <script type="text/javascript" src="{{ asset('bundles/cinecatranslation/js/bootstrap.js') }}" ></script>
      {% endblock %}
    </head>
    <body>

    {% block navbar %}
    <nav class="navbar navbar-default navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{path('homepage')}}">
            <img src="{{ asset('bundles/cinecatranslation/images/bg-body.jpg')}}" alt="Logo" height="25px" />
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><b>Menu</b> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="{{path('cineca_translation_homepage')}}">Translation List</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Other</a></li>
              </ul>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <b>{% trans %}Welcome{% endtrans %} {{ app.user ? [app.user.anagrafica.nome|upper,' ' , app.user.anagrafica.cognome|upper]|join : '' }}</b>
                  <i class="caret"></i>
              </a>
              {#%
              <ul class="dropdown-menu">
                <li><a href="{{ url('homepage') }}">Home Page</a></li>
                {% if path('logout') %}
                  <li><a href="{{path('logout')}}">Logout</a></li>
                {% endif %}
              </ul>
              %#}
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    {% endblock %}

    <div>
        {% block content %}
        {% endblock %}
    </div>

    </body>
</html>